<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    tools:ignore="RtlHardcoded,HardcodedText">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:padding="4dp">

        <ImageView
            android:id="@+id/product_image"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignParentRight="true"
            android:scaleType="centerCrop"
            android:src="@color/grayTransparent"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/nameProduct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/product_image"
            android:fontFamily="@font/urw_geometric_arabic_bold"
            android:padding="4dp"
            android:text="إسم المنتج"
            android:textColor="@color/black"
            android:textSize="12sp"
             />

        <TextView
            android:id="@+id/type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/nameProduct"
            android:fontFamily="@font/urw_geometric_arabic_bold"
            android:lines="1"
            android:padding="4dp"
            android:text="صنف اول"
            android:textColor="@color/gray"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/product_image"
            android:fontFamily="@font/urw_geometric_arabic_bold"
            android:padding="4dp"
            android:text="الكمية : "
            android:textColor="@color/black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/tv_1"
            android:fontFamily="@font/urw_geometric_arabic_bold"
            android:padding="4dp"
            android:text="10 kg"
            android:textColor="@color/gray"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@id/tv_1"
            android:layout_toLeftOf="@id/product_image"
            android:fontFamily="@font/urw_geometric_arabic_bold"
            android:gravity="center"
            android:padding="4dp"
            android:text="السعر : "
            android:textColor="@color/black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@id/quantity"
            android:layout_toLeftOf="@id/tv_2"
            android:fontFamily="@font/urw_geometric_arabic_bold"
            android:gravity="center"
            android:padding="4dp"
            android:text="180 قرش"
            android:textColor="@color/gray"
            android:textSize="12sp" />


        <TextView
            android:id="@+id/packaging"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/option_btn"
            android:layout_centerVertical="true"
            android:fontFamily="@font/urw_geometric_arabic_bold"
            android:gravity="center"
            android:padding="8dp"
            android:text="تغليف"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="14sp" />



        <ImageButton
            android:id="@+id/option_btn"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:layout_alignParentLeft="true"
            android:scaleType="center"
            android:src="@drawable/ic_more_horiz"
            tools:ignore="ContentDescription" />



    </RelativeLayout>

</android.support.v7.widget.CardView>